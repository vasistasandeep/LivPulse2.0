# LivPulse v2.0 Docker Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/livpulse

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# JWT Secrets (Generate secure random strings)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_min_32_chars

# Application URLs
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:5000/api

# Application Info
VITE_APP_NAME=LivPulse v2.0
VITE_APP_VERSION=2.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production URLs (for production deployment)
# FRONTEND_URL=https://your-domain.com
# VITE_API_URL=https://api.your-domain.com

# Database URLs (for production with external databases)
# DATABASE_URL=postgresql://username:password@host:5432/database
# REDIS_URL=redis://username:password@host:6379