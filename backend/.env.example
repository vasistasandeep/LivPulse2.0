# Database
DATABASE_URL="postgresql://username:password@localhost:5432/livpulse_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS
FRONTEND_URL="http://localhost:3000"

# Server
PORT=5000
NODE_ENV="development"

# Email (for scheduled reports)
SMTP_URL="smtp://username:password@smtp.gmail.com:587"

# File Storage (using Postgres JSONB for v1)
FILE_STORAGE_URL="postgresql"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100